{
  "name": "Ninja Turtles 1.0",
  "description": "Shows time in a new tab",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["tabs", "bookmarks", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon" : "icon.png",
    "default_title": "Hello World"
  }
}
